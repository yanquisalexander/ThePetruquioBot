  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
    },
    "strict": true,
    "skipLibCheck": true
  }
}